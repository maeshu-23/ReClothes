.newpage
  .newpage__title
    ログイン
  .newpage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .formfield
        .formfield__label--normal
          = f.label :メールアドレス
        .formfield__input--normal
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email'
      .formfield
        .formfield__label--normal
          = f.label :パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上)
        .formfield__input--normal
          = f.password_field :password, autocomplete: "new-password", placeholder: 'password'
      .formfield
        .formfield__label--normal
          = f.label :パスワード（確認）
        .formfield__input--normal
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password confirmation'
      .actions
        = f.submit "ログイン", class: "Button UserButton"
